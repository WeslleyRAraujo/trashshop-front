{% extends 'master.twig' %}

{% block content %}
<div>
    <h5 class="text-secondary mb-4">Informações da Conta</h5>
    <form>
        <div class="row mb-3">
            <label class="col-sm-1 col-form-label">Nome:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control form-control-sm" id="name-user">
            </div>
        </div>
    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Email:</label>
        <div class="col-sm-4">
            <input type="email" class="form-control form-control-sm" id="email-user">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-1 col-form-label">Senha:</label>
        <div class="col-sm-4">
            <input type="password" class="form-control form-control-sm mb-3" id="password-user" placeholder="senha atual">
            <input type="password" class="form-control form-control-sm" id="password-user" placeholder="senha nova">
        </div>
    </div>
    <button type="submit" class="btn btn-dark">Atualizar</button>
    </form>
    <hr class="col-5">
    <small class="text-secondary ">Outras Opções:</small>
    <br>
    <button type="submit" class="btn btn-danger btn-sm mt-3">Solicitar exclusão da conta</button>
</div>
{% endblock %}